{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "allowImportingTsExtensions": false,
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": false,
        "emitDeclarationOnly": false,
        "noEmit": false,
        "allowJs": false,
        "sourceMap": false,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "bundler"
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "**/*.test.ts"
    ]
}